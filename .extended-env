# General application settings
APP_NAME=laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# PHP & Docker Configuration
PHP_VERSION=8.2-cli-alpine
DB_DRIVER=mysql
USER=laravel
UID=1000
DOCKER_IMAGE_PREFIX=laravel
DOCKER_IMAGE_TAG=latest

# Laravel Development Server (PHP Artisan Serve)
APP_PORT=8000

# Vite (Frontend Development Server)
VITE_PORT=5173

# Database Configuration (MySQL / PostgreSQL)
DB_CONNECTION=${DB_DRIVER}
DB_HOST=db
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=root

# PostgreSQL Configuration (Jika DB_DRIVER=pgsql, sesuaikan port)
PG_PORT=5432

# Docker Networks
DOCKER_NETWORK=database-docker-network
